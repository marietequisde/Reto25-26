<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFondo"
    android:padding="@dimen/margen_standard"
    android:id="@+id/main">

    <TextView
        android:id="@+id/tvInstruccciones"
        style="@style/CuerpoPlanta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/margen_standard"
        android:paddingTop="40dp"
        android:text="Selecciona una tarjeta para ver los detalles de la planta." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPlantas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>